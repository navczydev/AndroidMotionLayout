<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <ConstraintSet android:id="@+id/custom_menu_start">
    <Constraint
      android:id="@+id/episode7"
      android:layout_width="@dimen/button_size"
      android:layout_height="@dimen/button_size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
    <Constraint
      android:id="@+id/episode8"
      android:layout_width="@dimen/button_size"
      android:layout_height="@dimen/button_size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
    <Constraint
      android:id="@+id/episode9"
      android:layout_width="@dimen/button_size"
      android:layout_height="@dimen/button_size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
  </ConstraintSet>
  <ConstraintSet android:id="@+id/custom_menu_end">
    <Constraint
      android:id="@+id/episode7"
      android:layout_width="@dimen/button_size"
      android:layout_height="@dimen/button_size"
      android:layout_marginBottom="72dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.18"
      app:layout_constraintStart_toStartOf="parent" />
    <Constraint
      android:id="@+id/episode8"
      android:layout_width="@dimen/button_size"
      android:layout_height="@dimen/button_size"
      android:layout_marginBottom="136dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
    <Constraint
      android:id="@+id/episode9"
      android:layout_width="@dimen/button_size"
      android:layout_height="@dimen/button_size"
      android:layout_marginBottom="72dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.82"
      app:layout_constraintStart_toStartOf="parent" />
  </ConstraintSet>
  <Transition
    app:constraintSetEnd="@id/custom_menu_end"
    app:constraintSetStart="@id/custom_menu_start"
    app:duration="100">
    <OnClick
      app:clickAction="toggle"
      app:targetId="@+id/episodeButton" />
  </Transition>
</MotionScene>